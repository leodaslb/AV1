{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "outDir": "./out",
    "moduleResolution": "nodenext",
    "noImplicitAny": false
  },
  "include": ["src/**/*"]
}
